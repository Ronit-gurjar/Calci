<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text:"0"
            halign: "right"
            font_size: 35
            size_hint: 1, 0.25
        
        #creating a grid for buttons
        GridLayout:
            cols: 4
            rows: 6
            spacing:1
            padding:1
        #ROW1
            Button:
                markup: True
                text: "[color=#000000]√[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.P_root()
                
            Button:
                markup: True
                text: "[color=#000000]π[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.Pie()

            Button:
                markup: True
                text: "[color=#000000]^[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.Power()

            Button:
                markup: True
                text: "[color=#000000]+/-[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.PosNegconvert()


        #ROW2
            Button:
                id: All_clear
                size_hint: (0.2,0.2)
                font_size:32
                text: "AC"
                background_color: (0,0.7,1,1)
                on_press: root.allClear()

               # on_press: root.Brackets()
            GridLayout:
                cols:2
                spacing:2
                padding:1
                size_hint: (0.2,0.2)
                
                Button:
                    size_hint: (0.2,0.2)
                    font_size:32
                    text: "("
                    background_color: (0,0.7,1,1)
                    on_press: root.BracketOp()

                Button:
                    size_hint: (0.2,0.2)
                    font_size:32
                    text: ")"
                    background_color: (0,0.7,1,1)
                    on_press: root.BracketCls()

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "%"
                background_color: (0,0.7,1,1)
                on_press: root.Reminder()

            Button:
                markup: True
                text: "[color=#000000]/[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.Division()


        #ROW3
            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "7"
                on_press: root.num_press(7)

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "8"
                on_press: root.num_press(8)

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "9"
                on_press: root.num_press(9)

            Button:
                markup: True
                text: "[color=#000000]*[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.Multiply()


        #ROW4
            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "4"
                on_press: root.num_press(4)

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "5"
                on_press: root.num_press(5)

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "6"
                on_press: root.num_press(6)

            Button:
                markup: True
                text: "[color=#000000]-[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.Sub()


        #ROW5
            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "1"
                on_press: root.num_press(1)

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "2"
                on_press: root.num_press(2)

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "3"
                on_press: root.num_press(3)

            Button:
                markup: True
                text: "[color=#000000]+[/color]"
                size_hint: (0.2,0.2)
                font_size:32
                background_normal:''
                background_color: (0,1,1,1)
                on_press: root.Add()


        #ROW6
            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "."
                on_press: root.Period()

            Button:
                size_hint: (0.2,0.2)
                font_size:32
                text: "0"
                on_press: root.num_press(0)

            Button:
                size_hint: (0.2,0.2)
                font_size:28
                text: u"\u00AB"
                background_normal:''
                background_color: (0.2,0.2,0.2,1)
                on_press: root.Clear()

            Button:
                markup: True
                text: "[color=#000000]=[/color]"
                size_hint: (0.2,0.1)
                font_size:32
                background_normal:''
                background_color: (0.9,0.9,0,1)
                on_press: root.Solution()
